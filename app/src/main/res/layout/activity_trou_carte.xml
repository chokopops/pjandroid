<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrouActivityCarte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="147dp">

        <ImageView
            android:id="@+id/ivtroucarte"
            android:layout_width="match_parent"
            android:layout_height="544dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <TextView
            android:id="@+id/tvdistancecarte"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="TextView" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:id="@+id/trous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trous" />

            <TextView
                android:id="@+id/pars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Par" />

            <TextView
                android:id="@+id/j1carte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J1" />

            <TextView
                android:id="@+id/j2carte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J2" />

            <TextView
                android:id="@+id/j3carte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J3" />

            <TextView
                android:id="@+id/j4carte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J4" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:id="@+id/troucarte"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="trou" />

            <TextView
                android:id="@+id/parcarte"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="par" />

            <EditText
                android:id="@+id/j1scorecarte"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Score"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/j2scorecarte"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Score"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/j3scorecarte"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Score"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/j4scorecarte"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Score"
                android:inputType="textPersonName" />
        </TableRow>

        <Button
            android:id="@+id/enregistrerscorescarte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>